@using DemoAppDevelopment.ViewModels

@model BookViewModel

@{
    var listCategory = ViewData["listCategories"] as List<Category>;
}

<script src="https://kit.fontawesome.com/a775ea28da.js" crossorigin="anonymous"></script>

<style>
    .body-container {
        display: flex;
    }

    .side-bar {
        width: 20%;
        margin: 0 20px 0 10px;
    }

    .fa-chart-line {
        margin-right: 10px;
    }

    .fa-book {
        margin-right: 10px;
    }

    .fa-list {
        margin-right: 10px;
    }

    .fa-clipboard-user {
        margin-right: 10px;
    }

    .display-container {
        width: 80%;
    }

    .btn-wrapper {
        margin: 10px 0 10px 0;
    }

    #book-management {
        color: black;
        text-decoration: none;
    }

    #category-request {
        color: black;
        text-decoration: none;
    }
</style>

<div class="body-container">
    <div class="display-container">
        <form enctype="multipart/form-data" asp-controller="Book" asp-action="Update" method="post">
            <input asp-for="@Model.book.Id" type="hidden" value="@Model.book.Id" />
            <div class="form-group">
                <label asp-for="@Model.book.Title" class="control-label"></label>
                <input asp-for="@Model.book.Title" class="form-control" placeholder="Name Of Book" />
                <span asp-validation-for="@Model.book.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.book.Price" class="control-label"></label>
                <input asp-for="@Model.book.Price" class="form-control" placeholder="Name Of Book" />
                <span asp-validation-for="@Model.book.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.book.Author" class="control-label"></label>
                <input asp-for="@Model.book.Author" class="form-control" placeholder="Name Of Book" />
                <span asp-validation-for="@Model.book.Author" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.book.Description" class="control-label"></label>
                <input asp-for="@Model.book.Description" class="form-control" placeholder="Name Of Book" />
                <span asp-validation-for="@Model.book.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.book.Quantity" class="control-label"></label>
                <input asp-for="@Model.book.Quantity" class="form-control" placeholder="Quantity Of Book" />
                <span asp-validation-for="@Model.book.Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.book.Category" class="control-label"></label>
                <select asp-for="@Model.book.CategoryId"
                        asp-items="@(new SelectList(@Model.listCategory, nameof(Category.Id), nameof(Category.CategoryName)))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="@Model.book.Category" class="text-danger"></span>
            </div>

            <div class="form-group font-weight-bold h5">
                <label>Current Image</label>
                <img class="form-control rounded" style=" height:60%; width: 50%; object-fit: contain; border: none;"
                     src="@ViewBag.ImageData"
                     alt="image">
            </div>
            <div class="form-group">
                <label class="font-weight-bold h5">New Image</label>
                <dl>
                    <dt>
                        <label style="color:black;" asp-for="@Model.ProfileImage">Choose File</label>
                    </dt>
                    <dd>
                        <input asp-for="@Model.ProfileImage" type="file">
                    </dd>
                </dl>
            </div>

            @* <div class="form-group">
            <label asp-for="@Model.ProfileImage" class="control-label"></label>
            <div class="custom-file">
            <input asp-for="@Model.ProfileImage" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
            <span asp-validation-for="ProfileImage" class="text-danger"></span>
            </div>*@

            <div class="btn-wrapper">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>