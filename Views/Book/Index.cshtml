@model List<Book>
<h1>List all book</h1>

<a class="btn btn-primary" asp-action="Create" asp-controller="Book">Create a new book</a>


<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>


        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row"></th>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.Price</td>
                <td>@item.Description</td>

                <td>@item.Category.CategoryName</td>
                <td>
                    <a class="btn btn-dark" asp-action="Update" asp-controller="Book" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-dark" asp-action="Detail" asp-controller="Book" asp-route-id="@item.Id">Detail</a>
                    <a class="btn btn-dark" asp-action="Delete" asp-controller="Book" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>